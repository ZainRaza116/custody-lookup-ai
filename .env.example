# =============================================================================
# CUSTODY LOOKUP AI - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# This file can be safely committed to version control

# =============================================================================
# TWILIO CONFIGURATION (Required)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# =============================================================================
# OPENAI CONFIGURATION (Required)
# =============================================================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=whisper-1

# =============================================================================
# FLASK APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=generate-a-random-secret-key
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/custody_lookup.log

# =============================================================================
# SECURITY
# =============================================================================
VALIDATE_TWILIO_REQUESTS=True
RATE_LIMIT_PER_MINUTE=10
SESSION_TIMEOUT=300

# =============================================================================
# CUSTODY LOOKUP
# =============================================================================
CUSTODY_LOOKUP_URL=https://jimspub.riversidesheriff.org/
BROWSER_HEADLESS=True
BROWSER_TIMEOUT=10

# =============================================================================
# DEVELOPMENT
# =============================================================================
NGROK_URL=https://your-ngrok-url.ngrok.io
ENABLE_SPEECH_RECOGNITION=True
ENABLE_CUSTODY_LOOKUP=True